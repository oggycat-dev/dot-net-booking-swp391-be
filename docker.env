# ============================================
# Docker Environment Configuration
# ============================================
# This file is used by docker-compose.yml
# Copy values from .env or set them directly here

# PostgreSQL Configuration for Docker
POSTGRES_DB=CleanArchitectureTemplateDb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=Docker@123456

# Application Server Configuration
ASPNETCORE_ENVIRONMENT=Development

# Application Configuration
App__Environment=Development
App__Name=Clean Architecture Template
App__Version=1.0.0

# CORS Configuration
Cors__AllowedOrigins__0=http://localhost:3000
Cors__AllowedOrigins__1=https://localhost:3000

# Logging Configuration
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft=Warning
Logging__LogLevel__Microsoft_Hosting_Lifetime=Information
Logging__LogLevel__Microsoft_EntityFrameworkCore=Warning

# JWT Configuration
JWT__SecretKey=your-super-secret-key-here-must-be-at-least-32-characters-long-change-in-production
JWT__Issuer=CleanArchitectureTemplate
JWT__Audience=CleanArchitectureTemplate
JWT__ExpirationMinutes=60
JWT__RefreshTokenExpirationDays=7

# Admin Account Configuration
Admin__Username=admin
Admin__Password=Admin@123456
Admin__Email=admin@cleanarchitecture.com
Admin__FirstName=System
Admin__LastName=Administrator
